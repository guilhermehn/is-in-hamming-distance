{
  "name": "is-in-hamming-distance",
  "version": "1.0.0",
  "description": "Returns true if the hamming distance between two strings or arrays of equal length is smaller than the given limit",
  "main": "index.mjs",
  "scripts": {
    "test": "node --test spec.mjs",
    "benchmark": "node benchmark.mjs > BENCHMARK.txt && envinfo --system >> BENCHMARK.txt",
    "prerelease": "npm test && npm run benchmark && npm run docs && git add BENCHMARK.txt API.md",
    "release": "standard-version --commit-all",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">= 18"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
    },
    "env": {
      "node": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --collectCoverage --findRelatedTests"
    ],
    "*.md": [
      "prettier --parser=markdown --write"
    ]
  },
  "keywords": [
    "hamming",
    "distasnce",
    "compare"
  ],
  "author": "Guilherme Nagatomo <nagatomo.guilherme@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "benchmark": "^2.1.4",
    "envinfo": "^7.5.0",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "standard-version": "^9.5.0"
  }
}
